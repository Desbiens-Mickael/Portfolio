{% extends 'admin/base.html.twig' %}

{% block title %}Techno{% endblock %}

{% block body %}
    <h1>Techno</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ techno.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ techno.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ techno.image ? techno.image : "pas d'image trouvée" }}</td>
            </tr>
            <tr>
                <th>Progress</th>
                <td>{{ techno.progress }}</td>
            </tr>
        </tbody>
    </table>
<div class="text-center mb-5 mt-5">
    {% if vich_uploader_asset(techno) %}
        <img src="{{ vich_uploader_asset(techno) }}" alt="{{ techno.name }}">
    {% else %}
        <img src="{{ asset('build/images/default1.png') }}" alt="{{ techno.name }}">
    {% endif %}
    <p>{{ techno.name }}</p>
</div>

<div class="w-75 d-flex flex-row justify-content-around align-items-center py-3
            rounded-3 btn-box shadow mx-auto btn-bottom bg-dark">
    <div>
        <a class="btn btn-primary" href="{{ path('techno_index') }}">
            <i class="bi bi-backspace"></i>
            retour à la liste</a>

        <a class="btn btn-primary" href="{{ path('techno_edit', {'id': techno.id}) }}">
            <i class="bi bi-pencil"></i>
            éditer</a>
    </div>
    {{ include('admin/techno/_delete_form.html.twig') }}
    </div>
{% endblock %}
