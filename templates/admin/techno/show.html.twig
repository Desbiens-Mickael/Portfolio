{% block title %}Techno{% endblock %}

{% block body %}
    <h1>Techno</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ techno.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ techno.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ techno.image }}</td>
            </tr>
            <tr>
                <th>Progress</th>
