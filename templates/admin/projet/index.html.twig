{% extends 'admin/base.html.twig' %}

{% block title %}Index des projets{% endblock %}

{% block body %}
    <h1>Index des projets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Descriptif</th>
                <th>Link</th>
                <th>Date</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td>{{ projet.id }}</td>
                <td>{{ projet.name }}</td>
                <td>{{ projet.image }}</td>
                <td>{{ projet.descriptif }}</td>
                <td>{{ projet.link }}</td>
                <td>{{ projet.date ? projet.date|date('Y-m-d') : '' }}</td>
                <td>{{ projet.slug }}</td>
                <td>
                    <a href="{{ path('projet_show', {'id': projet.id}) }}">Afficher</a>
                    <a href="{{ path('projet_edit', {'id': projet.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">pas de projet trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('projet_new') }}">Cr√©er</a>
{% endblock %}
