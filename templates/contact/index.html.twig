{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <section class="box-contact">
        <div class="d-flex flex-row justify-content-center mt-5">
            <h2 class="border-bottom border-dark border-2 pb-3 text-primary">CONTACT</h2>
        </div>
        <div class="container-fluide w-100 mt-1 mt-md-5">
            <div class="row me-box d-flex flex-column align-items-center align-items-md-end gx-0 py-5">
                <h3 class="col-12 col-md-6 fs-2 text-center">N’HÉSITEZ PAS À ME CONTACTER</h3>

                {{ form_start(form, {
                    'attr':
                    {'class': 'row col-12 col-md-6 d-flex flex-row justify-content-between gx-0'}}) }}

                <div class="form-box col-12 col-md-5 p-0"> {{ form_row(form.firstname) }}</div>
                <div class="form-box col-12 col-md-5 p-0"> {{ form_row(form.lastname) }}</div>

                <div class="col-12 p-0 form-box">{{ form_row(form.objet) }}</div>
                <div class="col-12 p-0 form-box">{{ form_row(form.email) }}</div>
                <div class="col-12 p-0 form-box">{{ form_row(form.message) }}</div>
                <div class="col-12 p-0">
                    <button class="btn btn-primary my-2 w-100 shadow">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
