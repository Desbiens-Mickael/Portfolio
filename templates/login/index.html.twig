{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="box-login d-flex flex-column justify-content-center align-items-center">
        {% if error %}
            <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post" class="h-25 w-25 d-flex flex-column justify-content-around ">
            <label for="username"></label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Pseudo" class="rounded p-2"/>

            <label for="password"></label>
            <input type="password" id="password" name="_password" placeholder="Password" class="rounded p-2 mb-4"/>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            <button type="submit" class="rounded p-2 btn btn-primary">connexion</button>
        </form>
    </div>
{% endblock %}
