{% extends "base.html.twig" %}

{% block title %} {{ parent() }} {{ projet.name }}{% endblock %}

{% block body %}
    <section class="h-100 project-show pt-5 transition-pop">
        <h1 class="text-center text-light mb-4">{{ projet.name }}</h1>
        <a href="{{ path('projet_prez_index') }}" class="fs-1 text-decoration-none position-fixed ms-4">
            <i class="bi bi-arrow-left-circle-fill"></i></a>
        <div class="container">
            <div class="row">
                {% if vich_uploader_asset(projet) %}
                    <img src="{{ vich_uploader_asset(projet) }}" alt="{{ projet.name }}"
                         class="rounded-5 shadow col-12 col-lg-10 mx-auto ">
                {% else %}
                    <img src="{{ asset('build/images/elepant-php.jpg') }}" alt="{{ projet.name }}"
                         class="rounded-5 shadow col-12 col-lg-10 mx-auto">
                {% endif %}
                <p class="col-12 col-md-10 mx-auto text-light text-center">Date de cr√©ation : {{ projet.date|date("d/m/Y") }}</p>

                <div class="my-5 col-12 col-md-8 mx-auto text-light">
                    <h2 class="text-center mb-4">Description</h2>
                    <div class="fs-5 bg-dark p-md-5 p-3 rounded-4 bg-opacity-75">{{ projet.descriptif|raw }}</div>
                </div>

                <div class="container pb-5 col-12 col-md-10 mx-auto">
                    <h2 class="mb-4 text-light text-center">Stack technique</h2>
                    <div class="row row-cols-3 row-cols-lg-6 gy-5">
                        {% for techno in projet.techno  %}
                            <div class="col mx-auto text-center">
                                {% if vich_uploader_asset(techno) %}
                                    <img src="{{ vich_uploader_asset(techno) }}" alt="{{ techno.name }}"
                                         class="img-techno">
                                {% else %}
                                    <img src="{{ asset('build/images/default1.png') }}" alt="{{ techno.name }}"
                                         class="img-techno">
                                {% endif %}
                                <p class="text-light">{{ techno.name }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}